
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>List of drug units</h3>
    <table class="table-bordered text-center" >
        <thead>
            <tr>
                <th><p>Drug unit id</p></th>
                <th><p>Pick number</p></th>
                <th><p>Depot name</p></th>
                <th><p>Drug type</p></th>
                <th><p>Action</p></th>
            </tr>
        </thead>
        @foreach (var d in Model)
            {
            <tr>
                <td><p>   @d.DrugUnitId</p></td>
                <td><p>   @d.PickNumber</p></td>
                @if (d.Depot != null)
                {
                    <td><p>   @d.Depot.DepotName</p></td>
                }
                else
                {
                    <td><p> --- </p></td>
                }
                <td><p>   @d.DrugType.DrugTypeName</p></td>
                <td><p><a href="/Home/EditDrugUnitDepot/@d.DrugUnitId"> Edit depot </a></p></td>
            </tr>
        } 

         
    </table>
</div>